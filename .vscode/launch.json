	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest tests",
			"program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
			"args": ["./2019/day2/jest.test.js", "-i", "--codeCoverage=false"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}\\2019\\index.js"
		}
	]
}
